datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["filterJson"]
}

model User {
  id              String       @id @default(uuid())
  role            Role         @default(USER)
  username        String       @unique
  password        String
  email           String?      @unique
  fullName        String
  shortName       String
  phoneNumber     String?
  birthLocation   Json?
  currentLocation Json?
  deathLocation   Json?
  dateOfBirth     DateTime?
  dateOfDeath     DateTime?
  settings        Json?        @default("{ \"privacy\": {}, \"notification\": {} }")
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  parents         User[]       @relation("ParentChild", references: [id])
  children        User[]       @relation("ParentChild", references: [id])
  coupleID        String?
  couple          Couple?      @relation(fields: [coupleID], references: [id])
  coupleAsUserOne Couple?      @relation("userOne")
  coupleAsUserTwo Couple?      @relation("userTwo")
  socialLinks     SocialLink[]
}

model Couple {
  id               String    @id @default(uuid())
  userOneID        String    @unique
  userTwoID        String    @unique
  userOne          User      @relation("userOne", fields: [userOneID], references: [id])
  userTwo          User      @relation("userTwo", fields: [userTwoID], references: [id])
  users            User[]
  marriageLocation Json?
  dateOfMarriage   DateTime?
}

model SocialLink {
  id              String @id @default(uuid())
  userID          String
  type            Social
  url             String
  user            User   @relation(fields: [userID], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Social {
  FACEBOOK
  INSTAGRAM
  TWITTER
  LINKEDIN
  WEBSITE
}
